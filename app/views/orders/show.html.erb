<div class="container">
	<h3> Order Summary </h3>
	<hr/>
	<table class="table table-success table-striped">
		<thead>
	    	<tr>
			    <th scope="col">Item</th>
			    <th scope="col">Price</th>
			    <th scope="col">Quantity</th>
			    <th scope="col">Offers Applied</th>
	      		<th scope="col">Tax</th>
	      		<th scope="col">Discount</th>
	      		<th scope="col">Total</th>
	    	</tr>
	  	</thead>
	  	<tbody>
	  		<% @invoice_items.each do |invoice_item| %>
		  		<tr>
			  		<td><%= invoice_item.item.name %></td>
				    <td>$ <%= invoice_item.item.price %></td>
		      		<td><%= invoice_item.quantity %></td>
		      		<td><%= invoice_item.offers_applied %></td>
		     		<td>$ <%= invoice_item.total_tax %></td>
		     		<td>$ <%= invoice_item.total_discount %></td>
		     		<td>$ <%= invoice_item.total_price %></td>
		     	</tr>
		    <% end %>
		    <tr class="table-dark">
		    	<th scope="row">Total</th>
		    	<td></td>
		    	<td></td>
		    	<td></td>
		    	<td><%= @invoice.total_tax %></td>
		    	<td><%= @invoice.total_discount %></td>
		    	<td><%= @invoice.total_amount %></td>
		    </tr>
	  	</tbody>
	</table>
	<hr/>

	<div class="row">
		<div class="col-sm-2">
			<%= link_to "Delete Order", order_path(@order.id), :method => 'delete', :class => "btn btn-danger" %>
		</div>
		<div class="col-sm-2">
			<%= link_to "Complete Payment", complete_order_path(@order.id), :class => "btn btn-success" %>
		</div>
	</div>
</div>